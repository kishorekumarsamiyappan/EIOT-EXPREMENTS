#include <16F877A.h>
#device ADC=16

#FUSES NOWDT                    // No Watchdog Timer
#FUSES PUT                      // Power-Up Timer
#FUSES NOBROWNOUT               // No Brown-out Reset
#FUSES NOLVP                    // No Low Voltage Programming

#use delay(crystal=4MHz)
#use FIXED_IO(B_outputs=PIN_B7,PIN_B6,PIN_B5,PIN_B4,PIN_B3,PIN_B2,PIN_B1,PIN_B0)

const unsigned int8 segment_code[10] = {
   0x3F, // 0
   0x06, // 1
   0x5B, // 2
   0x4F, // 3
   0x66, // 4
   0x6D, // 5
   0x7D, // 6
   0x07, // 7
   0x7F, // 8
   0x6F  // 9
};

void main() {
   int i;
   while(TRUE) {
      for(i = 0; i < 10; i++) {
         output_b(segment_code[i]); // Show number on 7-segment
         delay_ms(100);            
      }
   }
}

