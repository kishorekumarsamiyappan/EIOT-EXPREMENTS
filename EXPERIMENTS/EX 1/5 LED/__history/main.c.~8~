#include <16F877A.h>
#device ADC=16

#FUSES NOWDT                    // No Watch Dog Timer
#FUSES PUT                      // Power Up Timer
#FUSES NOBROWNOUT               // No brownout reset
#FUSES NOLVP                    // No low voltage programming

#use delay(crystal=4MHz)
#use FIXED_IO(B_outputs=PIN_B0)  // Only B0 is output, rest are inputs by default

#define LED1    PIN_B0
#define SWITCH1  PIN_D0

void main() {
  // set_tris_d(0xFF);  // Port D as input (especially for SWITCH)
  // output_low(LED1);   // Start with LED OFF

   while(TRUE) {
      if(input(SWITCH1 == 0)) {
         output_high(LED1);  // Turn ON LED when switch is pressed
      } 
      else {
         output_low(LED1);   // Turn OFF LED when switch is not pressed
      }
   }
}

