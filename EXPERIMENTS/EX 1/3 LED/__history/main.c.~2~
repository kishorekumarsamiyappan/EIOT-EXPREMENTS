#include <16F877A.h>
#device ADC=16

#FUSES NOWDT
#FUSES PUT
#FUSES NOBROWNOUT
#FUSES NOLVP

#use delay(crystal=4000000)  // 4MHz

#use FIXED_IO(B_outputs=PIN_B0,PIN_B1,PIN_B2,PIN_B3,PIN_B4,PIN_B5,PIN_B6,PIN_B7)

void main()
{
   while(TRUE)
   {
      // Turn ON LEDs one by one
      output_b(0b00000001); delay_ms(300);
      output_b(0b00000010); delay_ms(300);
      output_b(0b00000100); delay_ms(300);
      output_b(0b00001000); delay_ms(300);
      output_b(0b00010000); delay_ms(300);
      output_b(0b00100000); delay_ms(300);
      output_b(0b01000000); delay_ms(300);
      output_b(0b10000000); delay_ms(300);

      // Turn OFF LEDs one by one (same way, but looks OFF)
      output_b(0b01000000); delay_ms(300);
      output_b(0b00100000); delay_ms(300);
      output_b(0b00010000); delay_ms(300);
      output_b(0b00001000); delay_ms(300);
      output_b(0b00000100); delay_ms(300);
      output_b(0b00000010); delay_ms(300);
      output_b(0b00000001); delay_ms(300);
      output_b(0b00000000); delay_ms(300);  // All OFF
   }
}

